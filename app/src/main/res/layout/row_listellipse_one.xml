<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="listellipseOneRowModel" type="com.lordhebx.app.modules.eventsfootball.data.model.ListellipseOneRowModel"/>
    </data>
    <LinearLayout android:id="@+id/linearRowellipseOne"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" android:orientation="horizontal">
        <ImageView android:id="@+id/imageEllipseOne"
            android:layout_height="@dimen/_36pxh"
            android:layout_marginBottom="@dimen/_3pxv"
            android:layout_marginTop="@dimen/_1pxv"
            android:layout_width="@dimen/_36pxh"
            android:scaleType="centerCrop" circular="@{true}"
            imageRes="@{@drawable/img_ellipse}"
            tools:ignore="ContentDescription" tools:src="@drawable/img_ellipse"/>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearColumnaelita"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_weight="0.81" android:layout_width="0dp" android:orientation="vertical">
            <TextView android:ellipsize="end"
                android:id="@+id/txtAelitaOne"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginStart="@dimen/_1pxh"
                android:layout_width="wrap_content"
                android:lineSpacingExtra="@dimen/_1pxh"
                android:singleLine="true"
                android:text="@{listellipseOneRowModel.txtAelitaOne}"
                style="@style/txtMontserratromanregular16" tools:text="@string/lbl_alice"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtTimeTwo"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_9pxv"
                android:layout_width="match_parent"
                android:lineSpacingExtra="@dimen/_1pxh"
                android:singleLine="true"
                android:text="@{listellipseOneRowModel.txtTimeTwo}"
                style="@style/txtMontserratromanbold14_3" tools:text="@string/msg_jan_10_2022_10"/>
        </LinearLayout>
    </LinearLayout>
</layout>
